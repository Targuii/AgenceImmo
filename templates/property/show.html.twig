{% extends 'base.html.twig' %}
{% block title property.title %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="col-md-8">

                </div>
                <div class="col-md-4">
                    <h1>{{ property.title }}</h1>
                    <h2>{{ property.rooms }} pièces - {{ property.surface }} m²</h2>
                    <div class="text-primary" style="font-size: 3em;font-weight: bold;">{{ property.formattedPrice }} &euro;</div>
                    <a href="#" class="btn btn-primary btn-sm">Contactez nous</a>
                </div>
            </div>
        </div>
    </div>
    <div class="container mt-4">
        <nav class="nav nav-tabs" id="tabs">

        </nav>
        <p>{{ property.description|nl2br }}</p>
        <div class="row">
            <div class="col-md-8">
                <h3>Caractéristiques :</h3>
                <table class="table table-striped">
                    <tr>
                        <td>Surface habitable :</td>
                        <td>{{ property.surface }} m²</td>
                    </tr>
                    <tr>
                        <td>Pièces :</td>
                        <td>{{ property.rooms }}</td>
                    </tr>
                    <tr>
                        <td>Chambre :</td>
                        <td>{{ property.bedrooms }}</td>
                    </tr>
                    <tr>
                        <td>Ètage :</td>
                        <td>{{ property.floor }}</td>
                    </tr>
                    <tr>
                        <td>Chauffage :</td>
                        <td>{{ property.heatType|capitalize }}</td>
                    </tr>
                </table>
            </div>
            <div class="col-md-4">
                <h3>Spécificitées :</h3>
            </div>
        </div>
    </div>
{% endblock %}


