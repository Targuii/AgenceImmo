{{ form_start(form) }}
<div class="row">
    <div class="col-md-6">{{ form_row(form.title) }}</div>
    <div class="col-md-2">{{ form_row(form.surface) }}</div>
    <div class="col-md-2">{{ form_row(form.price) }}</div>
</div>
<div class="row">
    <div class="col-md-2">{{ form_row(form.rooms) }}</div>
    <div class="col-md-2">{{ form_row(form.bedrooms) }}</div>
    <div class="col-md-2">{{ form_row(form.floor) }}</div>
    <div class="col-md-2">{{ form_row(form.heat) }}</div>
</div>
<div class="row">
    <div class="col-md-3">{{ form_row(form.adress) }}</div>
    <div class="col-md-2">{{ form_row(form.postal_code) }}</div>
    <div class="col-md-3">{{ form_row(form.city) }}</div>
    <div class="col-md-1">{{ form_row(form.sold) }}</div>
</div>
<div class="row flex">
    <div class="col-md-2">
        {{ form_row(form.pictureFiles) }}
    </div>
    {% for picture in property.pictures %}
    <div class="col" style="width: 100px; flex: none;margin: 2px;">
        <img src="{{ vich_uploader_asset(picture, 'imageFile') | imagine_filter('min') }}" width="100" alt="">
        <a href="{{ path('admin.picture.delete',{id:picture.id}) }}" class="btn btn-danger btn-sm" data-delete data-token="{{ csrf_token('delete' ~ picture.id) }}">
        Supprimer</a>
    </div>
    {% endfor %}
</div>
{{ form_rest(form) }}

<button class="btn btn-primary mb-3">{{ button|default('Enregistrer') }}</button>

{{ form_end(form) }}

